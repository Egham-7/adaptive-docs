{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Adaptive",
  "description": "Adaptive is an AI-powered platform offering cost-optimized and intelligent routing for LLMs.",
  "root": "index",
  "colors": {
    "primary": "#d4af37",
    "light": "#f0e68c",
    "dark": "#b8860b"
  },
  "favicon": "/favicon.ico",
  "navigation": {
    "groups": [
      {
        "group": "Getting Started",
        "pages": ["index", "quickstart", "authentication"]
      },
      {
        "group": "Framework Integrations",
        "pages": [
          "integrations/openai-sdk",
          "integrations/vercel-ai-sdk",
          "integrations/langchain",
          "integrations/langgraph",
          "integrations/llamaindex",
          "integrations/crewai"
        ]
      },
      {
        "group": "Developer Tools",
        "pages": [
          "developer-tools/claude-code",
          "developer-tools/cursor",
          "developer-tools/cline",
          "developer-tools/opencode",
          "developer-tools/kilo-code",
          "developer-tools/roo-code",
          "developer-tools/grok-cli",
          "developer-tools/gemini-cli",
          "developer-tools/codex",
          "developer-tools/qwen-code"
        ]
      },
      {
        "group": "Key Features",
        "pages": [
          "supported-models",
          "features/intelligent-routing",
          "features/bring-your-own-keys",
          "features/zero-completion-insurance",
          "features/data-privacy-retention",
          "features/prompt-response-cache",
          "features/semantic-cache",
          "features/provider-resiliency",
          "features/performance"
        ]
      },
      {
        "group": "API Reference",
        "pages": [
          "api-reference/chat-completions",
          "api-reference/messages",
          "api-reference/gemini-generate-content",
          "api-reference/gemini-stream-generate-content",
          "api-reference/select-model"
        ]
      },
      {
        "group": "Examples & Use Cases",
        "pages": ["examples/basic-chat", "examples/streaming-chat", "examples/select-model"]
      },
      {
        "group": "Support",
        "pages": ["troubleshooting", "terms-of-service", "privacy-policy"]
      }
    ]
  },
  "logo": {
    "light": "/logo/logo.svg",
    "dark": "/logo/logo-dark.svg",
    "href": "https://www.llmadaptive.uk"
  },
  "navbar": {
    "links": [
      {
        "label": "Pricing",
        "href": "https://www.llmadaptive.uk/pricing"
      },
      {
        "label": "Support",
        "href": "https://www.llmadaptive.uk/support"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Get Started",
      "href": "https://www.llmadaptive.uk/sign-up?redirect_url=/api-platform/orgs"
    }
  },
  "footer": {
    "socials": {
      "x": "https://x.com/adaptive",
      "github": "https://github.com/adaptive",
      "linkedin": "https://linkedin.com/company/adaptive"
    },
    "links": [
      {
        "header": "Resources",
        "items": [
          {
            "label": "Dashboard",
            "href": "https://www.llmadaptive.uk"
          },
          {
            "label": "Documentation",
            "href": "https://docs.www.llmadaptive.uk"
          }
        ]
      },
      {
        "header": "Company",
        "items": [
          {
            "label": "Careers",
            "href": "https://www.llmadaptive.uk/careers"
          },
          {
            "label": "Blog",
            "href": "https://www.llmadaptive.uk/blog"
          }
        ]
      },
      {
        "header": "Legal",
        "items": [
          {
            "label": "Terms of Service",
            "href": "https://docs.www.llmadaptive.uk/terms-of-service"
          },
          {
            "label": "Privacy Policy",
            "href": "https://docs.www.llmadaptive.uk/privacy-policy"
          }
        ]
      }
    ]
  },
  "api": {
    "baseUrl": "https://api.llmadaptive.uk/v1beta",
    "auth": {
      "method": "bearer"
    },
    "playground": {
      "display": "interactive"
    },
    "examples": {
      "languages": ["curl", "python", "javascript"]
    }
  },
  "openapi": "api-reference/openapi.json",
  "contextual": {
    "options": ["copy", "view", "chatgpt", "claude"]
  },
  "errors": {
    "404": {
      "redirect": true
    }
  }
}